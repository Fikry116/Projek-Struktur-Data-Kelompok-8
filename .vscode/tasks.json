        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-DSFML_STATIC",
                "-IC:\\SFML-3.0.2\\include",
                "${workspaceFolder}/Source/*.cpp",
                "-I${workspaceFolder}/Include",
                "-I${workspaceFolder}/App",
                "${file}",
                "-LC:\\SFML-3.0.2\\lib",
