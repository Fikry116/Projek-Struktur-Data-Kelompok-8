                "-lsfml-window-s-d",
                "-lsfml-audio-s-d",
                "-lsfml-system-s-d",
                "-lopengl32",
                "-lfreetype",
                "-lwinmm",
                "-lgdi32",
                "-lflac",
                "-lvorbisenc",
                "-lvorbisfile",
                "-lvorbis",
                "-logg",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
